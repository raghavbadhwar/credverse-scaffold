# CredVerse Environment Configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/credverse"

# Next.js
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Blockchain Configuration
POLYGON_AMOY_RPC_URL="https://rpc-amoy.polygon.technology"
POLYGON_MAINNET_RPC_URL="https://polygon-rpc.com"
PRIVATE_KEY="your-private-key-here"
POLYGONSCAN_API_KEY="your-polygonscan-api-key"

# Smart Contract Addresses
NEXT_PUBLIC_CREDENTIAL_REGISTRY_ADDRESS=""
NEXT_PUBLIC_NETWORK_ID="80002" # 80002 for Amoy, 137 for Mainnet

# IPFS Configuration
NEXT_PUBLIC_IPFS_GATEWAY="https://ipfs.io/ipfs/"
IPFS_PROJECT_ID="your-infura-ipfs-project-id"
IPFS_PROJECT_SECRET="your-infura-ipfs-project-secret"

# Arweave Configuration
ARWEAVE_KEY="your-arweave-key"
ARWEAVE_GATEWAY="https://arweave.net/"

# Supabase (Alternative to direct database)
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Authentication
NEXTAUTH_GOOGLE_CLIENT_ID="your-google-client-id"
NEXTAUTH_GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Stripe (for payments)
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Worldcoin (optional)
WORLDCOIN_APP_ID="app_..."
WORLDCOIN_ACTION="verify-credential"

# Aadhaar Integration (optional)
AADHAAR_CLIENT_ID="your-aadhaar-client-id"
AADHAAR_CLIENT_SECRET="your-aadhaar-client-secret"
AADHAAR_REDIRECT_URI="http://localhost:3000/api/auth/aadhaar/callback"

# DigiLocker Integration (optional)
DIGILOCKER_CLIENT_ID="your-digilocker-client-id"
DIGILOCKER_CLIENT_SECRET="your-digilocker-client-secret"
DIGILOCKER_REDIRECT_URI="http://localhost:3000/api/auth/digilocker/callback"

# Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
MIXPANEL_TOKEN="your-mixpanel-token"

# Monitoring
SENTRY_DSN="your-sentry-dsn"
LOGTAIL_TOKEN="your-logtail-token"

# Development
NODE_ENV="development"
DEBUG="credverse:*"
LOG_LEVEL="debug"

# Testing
JEST_WORKERS="4"
COVERAGE_THRESHOLD="80"

# Build
NEXT_PUBLIC_BUILD_ID=""
NEXT_PUBLIC_COMMIT_SHA=""

# Feature Flags
NEXT_PUBLIC_ENABLE_ZK_PROOFS="false"
NEXT_PUBLIC_ENABLE_WORLDCOIN="false"
NEXT_PUBLIC_ENABLE_AADHAAR="false"
NEXT_PUBLIC_ENABLE_DIGILOCKER="false"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_MONITORING="false"
